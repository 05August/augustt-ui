{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    "declarationMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // Tối ưu hóa để chỉ tạo index.d.ts
    "isolatedModules": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/stories",
    "**/*.stories.*",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ]
}